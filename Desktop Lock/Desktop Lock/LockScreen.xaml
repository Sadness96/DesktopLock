<Window x:Class="Desktop_Lock.LockScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LockScreen" Height="1080" Width="1920" WindowStyle="None" Loaded="Window_Loaded" Background="Transparent" WindowState="Maximized" AllowsTransparency="True">
    <Grid>
        <Rectangle x:Name="rectangle" Fill="#000000" HorizontalAlignment="Left" Height="100" Margin="0,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="100" Opacity="0.01"/>
        <Image x:Name="img" Source="/Image/S.H.I.E.L.D.png" Height="1080" Width="1920" Opacity="1"/>
        <Label x:Name="label1" Content="DEPARTMENT:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="#c8c7c3" FontSize="13" FontWeight="Bold"/>
        <Label x:Name="label2" Content="LOGIN USER:" HorizontalAlignment="Left" Margin="0,50,0,0" VerticalAlignment="Center" Foreground="#c8c7c3" FontSize="13" FontWeight="Bold"/>
        <Label x:Name="label3" Content="LOGIN DATE:" HorizontalAlignment="Left" Margin="0,100,0,0" VerticalAlignment="Center" Foreground="#c8c7c3" FontSize="13" FontWeight="Bold"/>
    </Grid>
</Window>
