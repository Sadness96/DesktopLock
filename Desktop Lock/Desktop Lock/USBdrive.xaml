<Window x:Class="Desktop_Lock.USBdrive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="USBdrive" Height="300" Width="500" AllowsTransparency="True" WindowStyle="None" Background="Transparent" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Image x:Name="img" Source="/Image/back.png" Margin="0,0,0,0" Height="300" Width="500" Opacity="0.95" MouseMove="img_MouseMove"></Image>
        <Image x:Name="img1" Source="/Image/wite.png" Margin="280,248,140,28" Height="25" Width="80" MouseDown="img1_MouseDown"></Image>
        <Image x:Name="img2" Source="/Image/clo.png" Margin="390,248,30,27" Height="25" Width="80" MouseDown="img2_MouseDown"></Image>
        <Image x:Name="img3" Source="/Image/eject.png" Margin="390,200,30,75" Height="25" Width="80" MouseDown="img3_MouseDown"></Image>
        <Label x:Name="libel" Content="向U盘写入密码:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="28"/>
        <Label x:Name="libel1" Content="请插入U盘" HorizontalAlignment="Left" Margin="80,120,0,0" VerticalAlignment="Top" Foreground="White" FontSize="28"/>
    </Grid>
</Window>
