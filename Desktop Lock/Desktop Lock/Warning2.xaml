<Window x:Class="Desktop_Lock.Warning2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warning2" Height="180" Width="300" AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Grid>
        <Image x:Name="img" Source="/Image/back1.png" Margin="0,0,0,0" Height="180" Width="300" Opacity="1" MouseMove="img_MouseMove"/>
        <Image x:Name="img1" Source="/Image/confirm.png" Margin="108,145,112,10" Height="25" Width="80" MouseDown="img1_MouseDown"></Image>
        <Image x:Name="img2" Source="/Image/cancel.png" Margin="210,145,10,10" Height="25" Width="80" MouseDown="img2_MouseDown"></Image>
        <Label x:Name="label1" Content="警告!" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24"/>
        <Label x:Name="label2" Content="如果没有写入U盘将会无法解锁" HorizontalAlignment="Left" Margin="6,68,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20"/>
    </Grid>
</Window>
